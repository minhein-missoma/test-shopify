<div class="vertical-spacing-sm">
   <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-10 gap-8">
         <div class="col-span-1 lg:col-span-6 bg-aqua h-80 rounded-xl">
            {% if section.settings.mobile_heading %}
               <p class="lg:hidden">
                  {{ section.settings.mobile_heading }}
               </p>
            {% endif %}
            <p class="{% if section.settings.mobile_heading %}hidden lg:block{% endif %}">
               {{ section.settings.heading }}
            </p>
            <a href="/" class="button button-red-dark w-auto">
               Click Here!!
            </a>
         </div>
         <div class="col-span-1 lg:col-span-4 bg-aqua h-80 rounded-xl"></div>
         <div class="col-span-1 lg:col-span-5 bg-aqua h-40 rounded-xl"></div>
         <div class="col-span-1 lg:col-span-5 bg-aqua h-40 rounded-xl"></div>
         <div class="col-span-1 lg:col-span-10 bg-aqua h-32 rounded-xl"></div>
      </div>
   </div>
</div>

{% schema %}
{
   "name": "Homepage Tiles",
   "settings": [
      {
         "type": "header",
         "content": "Content"
      },
      {
         "type": "text",
         "id": "heading",
         "label": "Heading"
      },
      {
         "type": "text",
         "id": "mobile_heading",
         "label": "Heading"
      }
   ],
   "blocks": [],
   "presets": [{
      "name": "Homepage Tiles",
      "blocks": []
   }]
}
{% endschema %}