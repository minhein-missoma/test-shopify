{% comment %}
      
   Variables:
   'heading': [string] Text to be used as the heading
   'body': [string] Text to be used as the body

{% endcomment %}

{% if heading != blank or body != blank %}
   <div class="text-center mb-9">
      {% if heading != blank %}
         <h2 class="heading {% if body != blank %}mb-2{% endif %} text-aqua">
            {{ heading }}
         </h2>
      {% endif %}
      {% if body != blank %}
         <p class="body max-w-container-small mx-auto">
            {{ body }}
         </p>
      {% endif %}
   </div>
{% endif %}